<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/teacherbg"
    android:padding="16dp">

    <TextView
        android:layout_width="368dp"
        android:layout_height="167dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Library Registration for Teachers"
        android:textColor="#7A1A8A"
        android:textSize="28sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name" />

    <EditText
        android:id="@+id/etIndexNumber"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:hint="Index Number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <RadioGroup
        android:id="@+id/radioGroupDate"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButtonWeekdays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Weekdays" />

        <RadioButton
            android:id="@+id/radioButtonWeekend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekend" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <RadioGroup
        android:id="@+id/radioGroupTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButtonMorning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Morning"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radioButtonAfternoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Afternoon"/>

        <RadioButton
            android:id="@+id/radioButtonEvening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Evening"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnLibraryRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Library Registration" />

</LinearLayout>
